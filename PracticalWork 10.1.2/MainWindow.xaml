<Window x:Class="PracticalWork_10._1._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticalWork_10._1._2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Фамилия:"/>
            <TextBox Name="LastNameTextBox"/>
            <TextBlock Text="Имя:"/>
            <TextBox Name="FirstNameTextBox"/>
            <TextBlock Text="Отчество:"/>
            <TextBox Name="MiddleNameTextBox"/>
            <TextBlock Text="Телефон:"/>
            <TextBox Name="PhoneNumberTextBox"/>
            <TextBlock Text="Серия паспорта:"/>
            <TextBox Name="PassportSeriesTextBox"/>
            <TextBlock Text="Номер паспорта:"/>
            <TextBox Name="PassportNumberTextBox"/>
            <Button Content="Обновить" Click="UpdateButton_Click" Margin="0,10,0,0"/>
            <ListBox Name="ModificationLogListBox" Margin="0,10,0,0"/>
        </StackPanel>

    </Grid>
</Window>
